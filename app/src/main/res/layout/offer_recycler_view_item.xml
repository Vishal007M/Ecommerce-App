<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:elevation="4dp"
    android:background="@drawable/round_corner_bg"
    android:orientation="vertical"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="horizontal">



           <RelativeLayout
               android:id="@+id/ll_top_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginVertical="10dp"
                   android:layout_gravity="center"
                   android:layout_alignParentStart="true"
                   android:paddingVertical="2dp"
                   android:layout_centerVertical="true"
                   android:background="@drawable/round_save_value_background"
                   android:layout_marginEnd="30dp"
                   android:elevation="4dp"
                   android:layout_toStartOf="@+id/wishcard">

                   <TextView
                       android:id="@+id/tv_save"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginStart="5dp"
                       android:layout_gravity="center"
                       android:layout_marginEnd="10dp"
                       android:layout_marginVertical="2dp"
                       android:text="YOU SAVE â‚¹20"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textSize="10dp" />
               </LinearLayout>

               <androidx.cardview.widget.CardView
                   android:id="@+id/wishcard"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:layout_marginVertical="10dp"
                   android:layout_marginEnd="10dp"
                   android:layout_gravity="start"
                   android:layout_marginStart="20dp"
                   android:layout_alignParentEnd="true"
                   android:visibility="gone"
                   android:background="@drawable/profile_round_corner_bg_dark"
                   app:cardCornerRadius="8dp">

                   <ImageView
                       android:id="@+id/wishlist"
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_gravity="center"
                       android:src="@drawable/heart_plus" />
               </androidx.cardview.widget.CardView>
           </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/innerbackground"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@+id/ll_top_view"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:elevation="16dp"
                android:padding="10dp"
                android:layout_marginHorizontal="6dp"
                android:layout_marginVertical="2dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/product_url"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/burger_img" />
            </androidx.cardview.widget.CardView>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/productname"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:textSize="16dp"
                android:gravity="start"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:text="Hamburger ..."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/foodtype"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@+id/innerbackground"
                    android:src="@drawable/veg_icon" />

                <TextView
                    android:id="@+id/tv_rating_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start"
                    android:layout_marginEnd="6dp"
                    android:text="5.0"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <RatingBar
                    android:id="@+id/rating_bar_indicator"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:src="@drawable/grade"
                    android:stepSize="0.5"
                    android:theme="@style/RatingBar" />

                <TextView
                    android:id="@+id/productreviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1.4"
                    android:gravity="start"
                    android:text="(10)"
                    android:textColor="@color/product_text_color_1"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

