<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullscreen"
        android:layout_gravity="center"
        android:background="@drawable/round_corner_border_address"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="12dp">

        <RadioButton
            android:id="@+id/rb_default"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:buttonTint="@color/orange"
            android:paddingStart="6dp"
            android:textSize="14dp"
            app:useMaterialThemeColors="false"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tv_address_type"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/rb_default"
            android:maxLength="35"
            android:gravity="center_vertical"
            android:text="Home"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/ll_direction"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/iv_edit_address"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/line_view_address"
                android:src="@drawable/profile_edit" />

            <View
                android:id="@+id/line_view_address"
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="10dp"
                android:layout_toStartOf="@+id/iv_delete_address"
                android:background="@color/orange" />

            <ImageView
                android:id="@+id/iv_delete_address"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/delete_img" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rb_default"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/address_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/profile_round_corner_bg"
                android:padding="6dp"
                app:tint="@color/product_text_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:maxLines="1"
                        android:text="Name - "

                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/phoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:maxLines="1"
                        android:text="Phone"
                        android:textColor="@color/hint" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_main"
            android:layout_marginTop="5dp"
            android:text="knlakdcvnadv"
            android:layout_marginBottom="5dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/black" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>






